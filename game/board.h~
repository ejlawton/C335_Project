#define BOARD_SIZE 64

typedef struct {
  int mine_flag;
  int count;
  
  int x_pos;
  int y_pos;
}tile;

typedef struct {
  int mine_count;
  struct tile tiles[BOARD_SIZE];
}board;
  
void board_init(void);
void board_reset(void);
void board_update(void);
